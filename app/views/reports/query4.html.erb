<div class="container">
    <div class="col-md-6">
        <h3>Movies and their director</h3>
    </div>
    <table class="table table-bordered table-striped table-condensed table-hover report-table">
        <thead>
            <div class="row">
                <tr>
                <th>Title</th>
                <th>Director</th>
                </tr>
            </div>
        </thead>
    <tbody>
        <div class="row">
            <% @vquery.each do |p| %>
                <tr>
                <td><%= p['title'] %></td>
                <td><%= p['name'] %></td>
                </tr>
            <% end %>
        </div>
    </tbody>
    </table>
</div>